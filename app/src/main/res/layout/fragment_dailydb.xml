<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyDBFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- 변경-->
    <View
        android:id="@+id/backView"
        style="@style/circleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/talk"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/pig"
        android:layout_alignTop="@+id/backView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/talking" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/talk"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/hanna11"
        android:text="초"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/talk"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/price"
        android:fontFamily="@font/hanna11"
        android:text="사용했습니다"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/hanna11"
        android:text="돈"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/item"
        android:fontFamily="@font/hanna11"
        android:text="벌었습니다"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/greatpig" />
</RelativeLayout>