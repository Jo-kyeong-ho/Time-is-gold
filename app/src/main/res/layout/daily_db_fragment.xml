<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daily_db_fragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- 변경-->
    <View
        style="@style/circleText"
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/talk"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/talking"
        android:layout_above="@+id/pig"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/backView"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/talk"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/hanna11"
        android:text="초" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/talk"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/price"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/hanna11"
        android:text="사용했습니다" />
    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="돈"
        android:fontFamily="@font/hanna11"
        android:textStyle="bold"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/text"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/item"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/hanna11"
        android:text="벌었습니다" />
    <ImageView
        android:id="@+id/pig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greatpig"
        android:layout_alignBottom="@+id/backView"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>