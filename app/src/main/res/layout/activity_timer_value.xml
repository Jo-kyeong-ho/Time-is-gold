<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d195ff">

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="￦ 8530"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/backView1"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#ffffff" />

    <View
        android:id="@+id/backView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#fff0ba" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_pig"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="pig.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/edgeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_pig"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="00:00:00"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        style="@style/circleShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edgeA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="중지" />
</RelativeLayout>