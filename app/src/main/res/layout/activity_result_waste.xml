<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d195ff"
    tools:context=".ResultWaste">

    <View
        android:id="@+id/backView1"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#ffffff" />

    <View
        android:id="@+id/backView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#fff0ba" />

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@null"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="8530 ￦"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pricetext"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="사용하였습니다."
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/homebtn"
        style="@style/circleShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="홈" />

</RelativeLayout>