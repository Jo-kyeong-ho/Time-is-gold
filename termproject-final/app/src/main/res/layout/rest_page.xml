<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timeisgold.toolbar.restPage"
    android:background="#d195ff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resting.."
        android:textColor="#ffffff"
        android:background="@null"
        android:textSize="35dp"
        android:layout_above="@id/backView1"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/hanna11"
        android:textStyle="bold"
        android:inputType="text"
        android:id="@+id/money"
        />

    <View
        android:id="@+id/backView1"
        android:layout_centerInParent="true"
        android:backgroundTint="#ffffff"
        android:layout_width="270dp"
        android:layout_height="270dp"/>

    <View
        android:id="@+id/backView2"
        android:layout_centerInParent="true"
        android:backgroundTint="#fff0ba"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <ImageView
        android:id="@+id/pigsleeping"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/sleeppig"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
         android:id="@+id/sleeping"
        android:layout_toRightOf="@id/pigsleeping"
        android:layout_above="@+id/pigsleeping"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Button" />
</RelativeLayout>
